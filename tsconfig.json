{
  "compilerOptions": {
    "target": "ESNext",                        
    "module": "commonjs",                      
    "lib": ["esnext"],                         
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "strict": true,                            
    "forceConsistentCasingInFileNames": true,  
    "esModuleInterop": true,                   
    "moduleResolution": "node",                
    "skipLibCheck": true,                      
    "sourceMap": true,                         
    "resolveJsonModule": true,                 
    "allowSyntheticDefaultImports": true      
  },
  "include": ["src/**/*"],                     
  "exclude": ["node_modules"]                 
}
