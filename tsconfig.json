{
  "compilerOptions": {
    "target": "es2016",                        
    "module": "ES6",                      
    "lib": ["esnext"],                         
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                            
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "esModuleInterop": true,                   
    "moduleResolution": "node",                
    "skipLibCheck": true                      
  },
  "include": [
    "src/**/*"                                
  ],
  "exclude": [
    "node_modules"                             
  ]
}
